{
  "id": "zwitscher-monitor",

  "instances": 1,
  "cpus": 0.1,
  "mem": 512,

  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "qaware-oss-docker-registry.bintray.io/zwitscher/zwitscher-monitor:1.0.1",
      "network": "BRIDGE",
      "portMappings": [
        { "hostPort": 0, "containerPort": 8989, "protocol": "tcp"}
      ]
    }
  },

  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/admin/health",
      "intervalSeconds": 10,
      "portIndex": 0,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
    ],

  "dependencies" : [ "zwitscher-config", "zwitscher-eureka" ],

  "env": {
    "eureka.host": "zwitscher-eureka.marathon.mesos"
  }

}
